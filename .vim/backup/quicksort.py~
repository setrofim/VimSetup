import sys

TEST_ARRAY = [5,23,6, 3, 2, 4, 5, 1, 1, 5, 3, 54, 2, 12]

def sort(a):
    quicksort(a, 0, len(a)-1)

def quicksort(a, p, r):
    if p < r:
        q = partition(a, p, r)
        quicksort(a, p, q-1)
        quicksort(a, q+1, r)

def swap(a, i, j):
    a[i], a[j] = a[j], a[i]

def partition(a, p, r):
    x = a[r]
    i = p - 1
    for j in xrange(p,r):
        if a[j] <= x:
            i += 1
            swap(a,i,j)
    swap(a,i+1,r)
    return i+1

if __name__ == '__main__':
    if len(sys.argv) > 1:
        a = [int(x) for x in sys.argv[1:]]
    else:
        a = TEST_ARRAY

    print 'before:\n', a
    sort(a)
    print 'after\n', a

