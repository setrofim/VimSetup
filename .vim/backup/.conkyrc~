# practice .conkyrc
#

update_interval 1.0

double_buffer yes
own_window yes
own_window_type override
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# fonts
#
use_xft yes
xftfont  Bitstream Vera Sans:size=9

uppercase no

# window settings
#
maximum_width 300
default_color white
alignment top_right


TEXT

$alignc${font Bitstream Vera Sans:size=10}${color lightgrey}setrofim$color$font
$alignc @
${font Bitstream Vera Sans:size=12}$alignc$nodename - $sysname $kernel$font

${color lightgrey}Uptime:$color $uptime $alignr${color lightgrey}Load:$color $loadavg

${cpubar cpu1 10,65} ${cpubar cpu2 10,65} ${cpubar cpu3 10,65} ${cpubar cpu4 10,65}
${cpugraph 000000 ffffff}
${color lightgrey}Highest CPU:
${color ddaa00} ${top name 1}$alignr${top cpu 1}
${color lightgrey} ${top name 2}$alignr${top cpu 2}
${color lightgrey} ${top name 3}$alignr${top cpu 3}
${color lightgrey} ${top name 4}$alignr${top cpu 4}

${color lightgrey}RAM usage:$color $mem/$memmax - $memperc%
$membar
${color lightgrey}Highest MEM:
${color ddaa00} ${top_mem name 1}$alignr${top_mem mem 1}
${color lightgrey} ${top_mem name 2}$alignr${top_mem mem 2}
${color lightgrey} ${top_mem name 3}$alignr${top_mem mem 3}
${color lightgrey} ${top_mem name 4}$alignr${top_mem mem 4}

${color grey}ROOT: $color${fs_used /} of ${fs_size /} (${fs_free /} free)
${fs_bar 6 /}
${color grey}Data: $color${fs_used /media/Data} of ${fs_size /media/Data} (${fs_free /media/Data} free)
${fs_bar 6 /media/Data}
${color grey}Media: $color${fs_used /media/Media} of ${fs_size /media/Media} (${fs_free /media/Media} free)
${fs_bar 6 /media/Media}
${color grey}Stuff: $color${fs_used /media/Stuff} of ${fs_size /media/Stuff} (${fs_free /media/Stuff} free)
${fs_bar 6 /media/Stuff}

${color lightgrey}IP address: $color${addr eth1}
${color lightgrey}Down: $color${downspeedf eth1} Kb/sec$alignr${color lightgrey}Up: $color${upspeedf eth1} Kb/sec
${color darkred}Downloaded: $color${totaldown eth1} $alignr ${color darkgreen}Uploaded: $color${totalup eth1}
