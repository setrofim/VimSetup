#!/usr/bin/env python
"""
pywhich.py

Usage:
    python pywhich.py <module_name>

"""
import os
import sys

searchmodule = sys.argv[1]
for path in sys.path:
    for root, dirs, files in os.walk(path):
        for f in files:
            nameroot = os.path.splitext(f)[0]
            if nameroot == searchmodule:
                print os.path.join(root, f)
                sys.exit()
        for d in dirs:
            if d == searchmodule:
                initpath = os.path.join(root, d, '__init__.py')
                if os.path.isfile(initpath):
                    print os.path.join(root, d)
                    sys.exit()
print "Not found."
    


